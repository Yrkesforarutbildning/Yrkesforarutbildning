@model List<Yrkesforarutbildning.Models.OfferModel>

 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<main>
    <section class="admin-portal">
        <div class="admin-container">
            <h2>Bokningar</h2>
            <div class="bookings-table">
                @if (Model != null && Model.Any())
{
                <table>
                    <thead>
                        <tr>
                            <th>Datum</th>
                            <th>Tjänst</th>
                            <th>Förnamn</th>
                            <th>Efternamn</th>
                            <th>Adress</th>
                            <th>Telefon</th>
                            <th>E-post</th>
                            <th>Åtgärder</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        @foreach (var offer in Model)
                        {
                            <tr>
                                <td>@offer.ChooseDate</td>
                                <td>@offer.SelectedService</td>
                                <td>@offer.FirstName</td>
                                <td>@offer.LastName</td>
                                <td>@offer.Address</td>
                                <td>@offer.PhoneNumber</td>
                                <td>@offer.Email</td>
                                <td>
                                    <a asp-action="DeleteOffer" asp-controller="Admin" asp-route-id="@offer.Id" class="btn btn-danger">
                                        Delete
                                    </a>
                                </td>
                        </tr>
                    }

                            
                        
                        
                        
                        
                        
                    </tbody>
                </table>
                }
                else
                {
                    <p>Inga offerter hittades.</p>
                }
            </div>
        </div>
    </section>
</main>


<script>
    function deleteOffer(id) {
        if (confirm("Are you sure you want to delete this offer?")) {
            fetch(`/Admin/DeleteOffer/${id}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
                .then(response => {
                    if (response.ok) {
                        alert("Offer deleted successfully!");
                       
                        location.reload();
                    } else {
                        alert("Failed to delete the offer.");
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }
    }

</script>